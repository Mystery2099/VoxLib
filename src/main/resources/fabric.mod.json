{
	"schemaVersion": 1,
	"id": "voxlib",
	"version": "${version}",
	"name": "Mystery2099's VoxLib",
	"description": "This mod adds some tools which help modders to more easily manipulate, create, and rotate voxel shapes in their code!",
	"authors": [
		"Mystery2099"
	],
	"contact": {
		"homepage": "https://github.com/Mystery2099",
		"sources": "https://modrinth.com/mod/voxlib",
		"issues": "https://github.com/Mystery2099/VoxLib/issues"
	},
	"license": "MMPL-1.0.1",
	"icon": "assets/voxlib/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "com.github.mystery2099.voxlib.VoxLib",
				"adapter": "kotlin"
			}
		]
	},
	"depends": {
		"fabricloader": ">=0.14.23",
		"minecraft": "~1.19.4",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": ">=1.10.14+kotlin.1.9.20"
	},
	"suggests": {
		"another-mod": "*"
	},
	"custom": {
		"modmenu": {
			"badges": [ "library" ]
		}
	}
}